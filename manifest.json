{
	"name": "Flash Facts",
	"version": "1.0",
	"description": "Math Facts and Sight Words App",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
  "browser_action": {
    "default_popup": "./build/index.html",
    "default_title": "Flash Facts"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}