@import "./colour_scheme.styl"
@import url('https://fonts.googleapis.com/css?family=Coming+Soon')

#app
  font-family: 'Coming Soon', cursive
  background-color: $blue-colour
  
  #flash-facts
    padding: 10%
    display: grid
    width: 100%
    height: 100%
    box-sizing: border-box
    align-items: center
    justify-items: center
    
    #options
      display: grid
      width: 100%
      height: 100%
      grid-gap: 30px
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))

      .option
        position: relative
        display: grid
        box-sizing: border-box
        align-items: center
        justify-items: center
        padding: 10px
        background-color: $white-ish-colour
        // background-repeat: none
        cursor: pointer
        border-radius: 50px
        -webkit-box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.4)
        box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.4)
        overflow: hidden
        
        .title
          font-size: 80px
          font-weight: bold
          text-shadow: 3px 3px 1px $white-ish-colour
          // color: $text-colour
          color: black
          user-select: none
          text-align: center
          z-index: 2
        
        &:after
          content: ""
          position: absolute
          opacity: 0.55
          z-index: 1
          top: 0
          left: 0
          right: 0
          bottom: 0
          background-repeat: no-repeat
          transform: translate(25%, 25%) rotate(-45deg)
        
        &.math-option
          position: relative
          
          &:after
            background-image: url('./math-facts-background.png')
            background-size: 100%
            // background-repeat: no-repeat
            
        &.words-option
          position: relative
          
          &:after
            background-image: url('./sight-words-background.png')
            background-size: 100%
            // background-repeat: no-repeat
        
        &:hover
          transform: translate(-5px, -5px)
          -webkit-box-shadow: 15px 15px 15px rgba(0, 0, 0, 0.4)
          box-shadow: 15px 15px 15px rgba(0, 0, 0, 0.4)
